@page "/manage"

<h1>Book Management</h1>

<div class="container">
    <!-- Search Section -->
    <div class="search-container">
        <h3>Search Books</h3>
        <div class="form-group">
            <label for="search">Search by Title or Author</label>
            <input type="text" class="form-control" id="search" placeholder="Enter book title or author">
        </div>
        <button class="btn btn-primary" id="search-button">Search</button>
    </div>

    <!-- Search Results Section -->
    <div class="search-results-container">
        <h3>Search Results</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Year</th>
                    <th>ISBN</th>
                    <th>Stock</th>
                </tr>
            </thead>           
        </table>
        <div class="actions-container">
            <button class="btn btn-success" id="borrow-button">Borrow</button>
            <button class="btn btn-warning" id="return-button">Return</button>
        </div>
    </div>

    <!-- Add New Book Section -->
    <div class="add-book-container">
        <h3>Add New Book</h3>
        <form>
            <div class="form-group">
                <label for="new-title">Title</label>
                <input type="text" class="form-control" id="new-title" placeholder="Enter book title" required>
            </div>
            <div class="form-group">
                <label for="new-author">Author</label>
                <input type="text" class="form-control" id="new-author" placeholder="Enter author" required>
            </div>
            <div class="form-group">
                <label for="new-publisher">Publisher</label>
                <input type="text" class="form-control" id="new-publisher" placeholder="Enter publisher" required>
            </div>
            <div class="form-group">
                <label for="new-year">Year</label>
                <input type="number" class="form-control" id="new-year" placeholder="Enter year of publication" required>
            </div>
            <div class="form-group">
                <label for="new-isbn">ISBN</label>
                <input type="text" class="form-control" id="new-isbn" placeholder="Enter ISBN" required>
            </div>
            <div class="form-group">
                <label for="new-stock">Stock</label>
                <input type="number" class="form-control" id="new-stock" placeholder="Enter stock quantity" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Book</button>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .search-container, .search-results-container, .inventory-container {
        margin-bottom: 50px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

    .btn {
        padding: 5px 10px;
        margin: 2px;
    }

    .btn-primary {       
        color: white;
        border: none;
    }

    .btn-success {      
        color: white;
        border: none;
    }

    .btn-warning {       
        color: white;
        border: none;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
